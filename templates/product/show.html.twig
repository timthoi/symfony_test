{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>
    <a href="{{ path('app_product_index') }}">back to list</a>
    <table class="table table-striped">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ product.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ product.title }}</td>
        </tr>
        <tr>
            <th>Price</th>
            <td>{{ product.price }}</td>
        </tr>
        <tr>
            <th>EId</th>
            <td>{{ product.eId }}</td>
        </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_product_edit', {'id': product.id}) }}">Edit</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
